{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "postbundle": "copy-and-watch src/**/*.graphql lib/",
    "postbundle:watch": "copy-and-watch --watch src/**/*.graphql lib/",
    "build:watch": "tsc -w && npm run postbundle:watch",
    "build": "tsc && npm run postbundle",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "npm run build && firebase deploy --only functions",
    "logs": "firebase functions:log",
    "dev": "npm run build && firebase emulators:start"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "7.5.16",
    "@graphql-tools/load": "7.8.12",
    "apollo-server-express": "3.11.1",
    "axios": "1.3.4",
    "base-64": "1.0.0",
    "express": "4.18.2",
    "firebase": "9.17.2",
    "firebase-admin": "11.5.0",
    "firebase-functions": "4.2.1",
    "graphql": "16.6.0",
    "isomorphic-dompurify": "1.5.0"
  },
  "devDependencies": {
    "@types/axios": "0.14.0",
    "@types/base-64": "1.0.0",
    "@types/firebase": "3.2.1",
    "@typescript-eslint/eslint-plugin": "3.9.1",
    "@typescript-eslint/parser": "3.8.0",
    "copy-and-watch": "0.1.6",
    "env-cmd": "10.1.0",
    "eslint": "7.6.0",
    "eslint-config-google": "0.14.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-import": "2.22.0",
    "firebase-functions-test": "0.2.0",
    "prettier": "2.8.4",
    "typescript": "4.9.5"
  },
  "private": true
}
