{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "postbundle": "copyfiles -u 1 src/**/*.graphql lib/",
    "build": "tsc & npm run postbundle",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions --region asia-southeast1",
    "logs": "firebase functions:log",
    "emulators": "npm run build && firebase emulators:start"
  },
  "engines": {
    "node": "16"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^7.5.16",
    "@graphql-tools/load": "^7.8.12",
    "@graphql-tools/load-files": "^6.6.1",
    "@graphql-yoga/node": "^3.7.0",
    "apollo-server-express": "^3.11.1",
    "express": "^4.18.2",
    "firebase-admin": "^9.8.0",
    "firebase-functions": "^3.14.1",
    "graphql": "^16.6.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.8.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.22.0",
    "firebase-functions-test": "^0.2.0",
    "typescript": "^4.9.5"
  },
  "private": true
}
